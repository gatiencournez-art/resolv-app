# ============================================================================
# RESOLV - Production Environment Variables
# ============================================================================
# Copy this file to .env.production and fill in your values
# Then run: docker compose -f docker-compose.prod.yml --env-file .env.production up -d
# ============================================================================

# --- Database ---
POSTGRES_DB=resolv
POSTGRES_USER=resolv
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD

# --- JWT (generate with: openssl rand -base64 64) ---
JWT_SECRET=CHANGE_ME_GENERATE_A_RANDOM_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_ANOTHER_SECRET
JWT_REFRESH_EXPIRES_IN=7d

# --- URLs ---
# Replace with your domain or server IP
# Example: https://resolv.example.com
CORS_ORIGIN=http://YOUR_DOMAIN_OR_IP
NEXT_PUBLIC_API_URL=http://YOUR_DOMAIN_OR_IP/api
